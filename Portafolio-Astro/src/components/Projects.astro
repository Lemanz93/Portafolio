---
import TailwindIcon from "./icons/TailwindIcon.astro"

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
      
  },
};

const PROJECTS = [
  {
    title: "Project 1",
    description: "Lorem Ipsum",
    link: "#",
    github: "#",
    image: "asdasdasd",
    tags: [TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200/90 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
            <li>
                <span class={`${tag.class} flex gap-x-2 rounded-full text-xs py-2 px-1`}>
                    <tag.icon class="size-4" />
                    {tag.name}
                </span>
                
            </li>
        ))}
      </ul>

      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
