---
import TailwindIcon from "./icons/TailwindIcon.astro"
import LinkButton from "./LinkButton.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import HTMLIcon from "./icons/HTMLIcon.astro"
import CSSIcon from "./icons/CSSIcon.astro"
import JavaScriptIcon from "./icons/JavaScriptIcon.astro"
import ReactIcon from "./icons/ReactIcon.astro"
import ReduxIcon from "./icons/ReduxIcon.astro"
import NodeJsIcon from "./icons/NodeJsIcon.astro"
import PostgreSQLIcon from "./icons/PostgreSQLIcon.astro"
import SequelizeIcon from "./icons/SequelizeIcon.astro"

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white dark:text-black border-2 border-sky-300",
    icon: TailwindIcon,
      
  },
  HTML: {
    name: "HTML",
    class: "bg-[#f76d31] text-white border-2 border-orange-300",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#03b1fc] text-white border-2 border-sky-300",
    icon: CSSIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#c9bb16] text-white border-2 border-yellow-300",
    icon: JavaScriptIcon,
  },
  REACT: {
    name: "React",
    class: "bg-[#0398fc] text-white border-2 border-sky-300",
    icon: ReactIcon,
  },
  REDUX: {
    name: "Redux",
    class: "bg-[#ab58d1] text-white border-2 border-purple-300",
    icon: ReduxIcon,
  },
  NODEJS: {
    name: "NodeJs",
    class: "bg-[#16c925] text-white border-2 border-green-300",
    icon: NodeJsIcon,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-[#898f8a] text-white border-2 border-gray-300",
    icon: PostgreSQLIcon,
  },
  SEQUELIZE: {
    name: "Sequelize",
    class: "bg-[#2233e6] text-white border-2 border-blue-300",
    icon: SequelizeIcon,
  },
  
};

const PROJECTS = [
  {
    title: "Vianda Express",
    description: "Desarrollo de una E-commerce de venta de viandas saludables junto a un grupo de 7 personas. La aplicacion cuenta con registro de usuario, carrito de compras, historial de compras, seguimiento y detalles de pedidos, entre otras features. Fue creada desde cero con React, JavaScript, Node.js, Express.js, Sequelize, Redux y PostgreSQL",
    link: "#",
    github: "#",
    image: "asdasdasd",
    tags: [TAGS.JAVASCRIPT, TAGS.NODEJS, TAGS.REACT, TAGS.REDUX, TAGS.SEQUELIZE, TAGS.POSTGRESQL],
  },
  {
    title: "Country App",
    description:
      "Desarrollo de una Single Page Aplication sobre todos los países del mundo. Cuenta con una barra de búsqueda, ordenamiento y filtrado, detalles de los países y formulario controlado. Fue realizado con tecnologías como: React, Javascript, Express.js, Sequelize, Redux y Node.js",
    link: "https://adventjs.dev",
    github: "#",
    image: "/projects/adventjs.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.NODEJS, TAGS.REACT, TAGS.REDUX, TAGS.SEQUELIZE, TAGS.POSTGRESQL],
  },
  {
    title: "Chatbot",
    description:
      "Desarrollo de un Chatbot, el cual realiza peticiones a la api de OpenAI. El chatbot te puede responder cualquier pregunta igual que lo hace ChatGPT. Fue desarrollado con: JavaScript, HTML y CSS",
    link: "https://adventjs.dev",
    github: "#",
    image: "/projects/adventjs.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />

        <ul class="flex gap-x-2 flex-row mt-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHubIcon class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>